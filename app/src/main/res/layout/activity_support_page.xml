<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SupportPage">

    <TextView
            android:text="@string/xperiencurity_support_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xpTitle" android:textStyle="bold"
            android:layout_marginTop="87dp"
            android:layout_marginBottom="15dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/xpSubtitle" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/please_select_one_of_the_options_for_relevant_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xpSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp" app:layout_constraintTop_toBottomOf="@+id/xpTitle"
            android:layout_marginBottom="55dp" app:layout_constraintBottom_toTopOf="@+id/feedbackBtn"
            android:layout_marginLeft="37dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"/>
    <Button
            android:text="@string/feedback"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/feedbackBtn"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/xpSubtitle"
            android:layout_marginBottom="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bugReportBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" android:textSize="24sp"
            android:onClick="feedbackClicked"/>
    <Button
            android:text="@string/bug_report"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bugReportBtn"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/feedbackBtn" android:layout_marginBottom="124dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="25dp" android:layout_marginEnd="25dp" android:layout_marginRight="25dp"
            android:textSize="24sp"
            android:onClick="bugReportClicked"/>
</androidx.constraintlayout.widget.ConstraintLayout>
